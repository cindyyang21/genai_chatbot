@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>智能客服機器人</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>

<body>
    <div class="bg">
        <img src="/images/taoyuan.png">
    </div>
    <div id="chatbot">
        <div id="chat-icon" onclick="toggleChat()">
            <img src="@Url.Content("~/images/chatbot-icon.png")" alt="Chatbot" id="icon-img">

        </div>
        <div id="chat-box" class="hidden">
            <div id="chat-header">
                <span>桃園好農</span>
                <img src="@Url.Content("~/images/refresh-icon.png")" alt="Refresh" id="refresh-icon" onclick="refreshChat()">
            </div>

            <div id="chat-content">
                <div class="message bot">您好，有什麼我可以幫助您的嗎？</div>
                <div class="message bot">以下為精選商品，提供您參考!</div>
                <div id="cardCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="card" style="width: 25rem; margin: auto;">
                                <img src="@Url.Content("~/images/XiuCaiOolongTea.jpg")" class="card-img-top" alt="XiuCaiOolongTea">
                                <div class="card-body">
                                    <h5 class="card-title">秀才烏龍茶</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><a href="https://taoyuanchoice.tycg.gov.tw/Home/ProductDetail/d241036c-8095-4dc9-a7ba-0e443d0b373b#gsc.tab=0" class="card-link">產品資訊</a></li>
                                    <li class="list-group-item"><a href="https://shopee.tw/%E3%80%90%E5%8F%8C%E9%9C%96%E8%8C%B6%E8%8E%8A%E3%80%91%E7%A7%80%E6%89%8D%E7%83%8F%E9%BE%8D%E8%8C%B6-%F0%9F%94%A5%E9%BE%8D%E7%9C%BC%E6%9C%A8%E6%85%A2%E7%83%98%F0%9F%94%A5-%E9%A6%99%E6%B0%A3%E5%AE%9C%E4%BA%BA-i.4010690.4810134291?sp_atk=d9990eb6-6b8a-467f-bd09-cdf4f0073305&xptdk=d9990eb6-6b8a-467f-bd09-cdf4f0073305" class="card-link">購買連結</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="card" style="width: 25rem; margin: auto;">
                                <img src="@Url.Content("~/images/CharocoalRoasstedBlackTea.jpg")" class="card-img-top" alt="CharocoalRoasstedBlackTea">
                                <div class="card-body">
                                    <h5 class="card-title">碳花紅茶</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><a href="https://taoyuanchoice.tycg.gov.tw/Home/ProductDetail/86c48593-71da-4eda-8152-923a18ce74bc#gsc.tab=0" class="card-link">產品資訊</a></li>
                                    <li class="list-group-item"><a href="https://shopee.tw/-%E5%8F%8C%E9%9C%96%E8%8C%B6%E8%8E%8A-%F0%9F%94%A5%E7%A2%B3%E8%8A%B1%E7%B4%85%E8%8C%B6%F0%9F%94%A5(%E4%B9%85%E6%B3%A1%E4%B8%8D%E8%8B%A6%E6%BE%80%EF%BC%8C%E5%8F%A3%E6%84%9F%E6%BF%83%E9%9F%BB)-%E5%8D%81%E5%A4%A7%E4%BC%B4%E6%89%8B%E7%A6%AE-%E5%8F%B0%E7%81%A3%E7%B4%85%E8%8C%B6-%E5%9C%A8%E5%9C%B0%E9%A2%A8%E5%91%B3%E8%8C%B6-i.4010690.25265500225?xptdk=5048ca95-b95f-4340-9266-b397a334b3ac" class="card-link">購買連結</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="card" style="width: 25rem; margin: auto;">
                                <img src="@Url.Content("~/images/XiuCaiBlackTea.jpg")" class="card-img-top" alt="XiuCaiBlackTea">
                                <div class="card-body">
                                    <h5 class="card-title">秀才紅茶</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><a href="https://taoyuanchoice.tycg.gov.tw/Home/ProductDetail/4c3b708b-6d2f-4280-b01e-a964eb698a73#gsc.tab=0" class="card-link">產品資訊</a></li>
                                    <li class="list-group-item"><a href="https://shopee.tw/-%E5%8F%8C%E9%9C%96%E8%8C%B6%E8%8E%8A-2023-%E6%98%A5%E8%8C%B6%F0%9F%94%A5%E7%A7%80%E6%89%8D%E7%B4%85%E8%8C%B6%F0%9F%94%A5(%E4%B9%85%E6%B3%A1%E4%B8%8D%E8%8B%A6%E6%BE%80)-%E5%8D%81%E5%A4%A7%E4%BC%B4%E6%89%8B%E7%A6%AE-%E5%8F%B0%E7%81%A3%E7%B4%85%E8%8C%B6-%E5%9C%A8%E5%9C%B0%E9%A2%A8%E5%91%B3%E8%8C%B6-i.4010690.23045180005?xptdk=51150d59-eda2-4b0f-9e63-61793dbf180d" class="card-link">購買連結</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#cardCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#cardCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <!-- 更多對話可以在這裡添加 -->
            </div>
            <div id="chat-input-area">
                <button id="menu-button" onclick="toggleMenu()">☰</button>
                <input type="text" id="chat-input" placeholder="輸入您的訊息...">
                <button id="send-button" onclick="sendRequest()">傳送</button>
            </div>
            <div id="menu-box" class="hidden">
                <table border="1">
                    <tr>
                        <td><div class="menu-item" onclick="sendMenuItemMessage(this)">選項1</div></td>
                        <td><div class="menu-item" onclick="sendMenuItemMessage(this)">選項2</div></td>
                        <td><div class="menu-item" onclick="sendMenuItemMessage(this)">選項3</div></td>
                    </tr>
                    <tr>
                        <td><div class="menu-item" onclick="sendMenuItemMessage(this)">選項4</div></td>
                        <td><div class="menu-item" onclick="sendMenuItemMessage(this)">選項5</div></td>
                        <td><div class="menu-item" onclick="sendMenuItemMessage(this)">選項6</div></td>
                    </tr>
                </table>

            </div>
        </div>
    </div>

    <script src="~/js/script.js"></script>
</body>
</html>
