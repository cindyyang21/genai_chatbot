                }
                <div class="card-body">
                        <p class="card-text">最後更新時間: @closeIcon.CreatedAt</p>
                    <div class="d-flex justify-content-between">
                            <a asp-action="CloseIconEdit" asp-route-id="@closeIcon.Id" class="btn btn-warning">編輯</a>
                            <form asp-action="CloseIconDelete" asp-controller="Admin" method="post">
                                <input type="hidden" name="id" value="@closeIcon.Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('確定要刪除嗎?')">刪除</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <div class="card-body">
                <p class="card-text">目前無關閉之圖示</p>
                <a asp-action="CloseIconCreate" class="btn btn-primary">上傳圖片</a>
            </div>
        </div>
    </div>
}



@if (Model.RefreshIcons != null && Model.RefreshIcons.Any())
{
    @foreach (var refreshIcon in Model.RefreshIcons)
    {
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                @if (!string.IsNullOrEmpty(refreshIcon.Picture))
                {
                    <img src="~/images/@refreshIcon.Picture" class="card-img-top" alt="Refresh Icon" style="width:100%; height:auto;">
                }
                <div class="card-body">
                        <p class="card-text">最後更新時間: @refreshIcon.CreatedAt</p>
                    <div class="d-flex justify-content-between">

                            <a asp-action="RefreshIconEdit" asp-route-id="@refreshIcon.Id" class="btn btn-warning">編輯</a>
                            <form asp-action="RefreshIconDelete" asp-controller="Admin" method="post">
                                <input type="hidden" name="id" value="@refreshIcon.Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('確定要刪除嗎?')">刪除</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <div class="card-body">
                <p class="card-text">目前無重整之圖示</p>
                <a asp-action="RefreshIconCreate" class="btn btn-primary">上傳圖片</a>
            </div>
        </div>
    </div>
}
</div>