@model prjChatBot.Models.ProductCard

@{
    ViewData["Title"] = "CardEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Product Card</h2>

<form asp-action="CardEdit" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageFileName" class="control-label">Current Image</label>
        <div>
            <img src="@Url.Content("~/images/" + Model.ImageFileName)" alt="@Model.Title" style="max-width: 150px;" />
        </div>
        <label asp-for="ImageFileName" class="control-label">Upload New Image (optional)</label>
        <input type="file" name="imageFile" class="form-control" />
        <span asp-validation-for="ImageFileName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductInfoUrl" class="control-label">Product Info URL</label>
        <input asp-for="ProductInfoUrl" class="form-control" />
        <span asp-validation-for="ProductInfoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PurchaseUrl" class="control-label">Purchase URL</label>
        <input asp-for="PurchaseUrl" class="form-control" />
        <span asp-validation-for="PurchaseUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="儲存修改" class="btn btn-primary" />
        <a asp-action="Card" class="btn btn-secondary">返回卡片</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}