@model prjChatBot.Models.ProductCard

@{
    ViewData["Title"] = "CardEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>卡片編輯</h2>

<form asp-action="CardEdit" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageFileName" class="control-label">Current Image</label>
        <div>
            <img src="@Url.Content("~/images/" + Model.ImageFileName)" alt="@Model.Title" style="max-width: 150px;" />
        </div>
        <label asp-for="ImageFileName" class="control-label">上傳圖片</label>
        <input type="file" name="imageFile" class="form-control" />
        <span asp-validation-for="ImageFileName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name1" class="control-label">名稱1：</label>
        <input asp-for="Name1" class="form-control" />
        <span asp-validation-for="Name1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url1" class="control-label">連結1：</label>
        <input asp-for="Url1" class="form-control" placeholder="https://example.com/product-info" />
        <span asp-validation-for="Url1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name2" class="control-label">名稱2：</label>
        <input asp-for="Name2" class="form-control" />
        <span asp-validation-for="Name2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url2" class="control-label">連結2：</label>
        <input asp-for="Url2" class="form-control" placeholder="https://example.com/purchase-link" />
        <span asp-validation-for="Url2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="儲存修改" class="btn btn-primary" />
        <a asp-action="Card" class="btn btn-secondary">返回卡片</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}