@model prjChatBot.Models.InitialMessage

@{
    ViewData["Title"] = "WelcomeEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>初始訊息編輯</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WelcomeEdit" method="post">
            <input type="hidden" asp-for="Id" />
            <div>
                <label for="message">Message:</label>
                <textarea id="message" name="Message" rows="5" cols="50">@Model.Message</textarea>
            </div>
            <div class="d-flex justify-content-between">
            <a asp-action="Welcome" class="btn btn-secondary">回到列表</a>
            <button type="submit" class="btn btn-primary">更新</button>
            </div>
        </form>
    </div>
</div>



